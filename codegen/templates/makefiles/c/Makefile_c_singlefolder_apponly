
.PHONY : all clean compile link 

TESTAPPNAME=tester

SRC=main.c
OBJ=$(SRC:.c=.o) 
COMP=gcc

ARCH := $(shell getconf LONG_BIT)

ifeq ($(MODE),)
	MODE=debug
endif

ifeq ($(MODE),debug)
LDFLAGS=-lasan
CFLAGS += \
	-g \
	-Wall \
	-Wextra \
	-pedantic \
	-Werror \
	-fPIC \
	-fsanitize=address \
	-pthread \
	-D_GLIBCXX_DEBUG \
	-std=c17
POSTBUILD=
#DEFINES= -D _DEBUG -D _LOG 
endif

ifeq ($(MODE),release)
CFLAGS += \
 	-O2 \
	-Wall \
	-Wextra \
	-pedantic \
	-Werror \
	-fPIC \
	-pthread \
	-std=c17
POSTBUILD= strip $(TESTAPPNAME)
#DEFINES= -D _LOG 
endif

ifeq ($(ARCH),64)
	CFLAGS += -m64
endif

INCLUDES=-I.
LDFLAGS+=

all: compile link 

compile:
	$(COMP) -c $(INCLUDES) $(SRC) $(CFLAGS)

link:
	$(COMP) -o $(TESTAPPNAME) $(OBJ) $(LDFLAGS)
	$(POSTBUILD)

clean:
	rm -rf $(OBJ)
	rm -rf $(TESTAPPNAME)
